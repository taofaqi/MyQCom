<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/ranking_normal_ranking_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="No.4" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rank_normal_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rank_title_first_img"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/ranking_normal_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="不一样的名字" />

        <TextView
            android:id="@+id/ranking_normal_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="139****5655" />

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/ranking_normal_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/darker_gray" />
</FrameLayout>