<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    tools:context="com.ttpai.myqcom.ui.activity.UserInfoActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/app_bule_gradient" />

    <RelativeLayout
        android:id="@+id/user_info_content_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_white_big_radius">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_info_user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/user_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/user_info_user_icon"
            android:text="不一样的名字" />

        <TextView
            android:id="@+id/user_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_info_username"
            android:layout_below="@id/user_info_username"
            android:layout_marginTop="5dp"
            android:text="不一样的名字" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_info_update_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/user_info_content_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_app_bg"
        android:gravity="center"
        android:text="修改资料"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
